<h1>Ingredients Index</h1>
<%= form_with url: pantry_ingredients_path, method: :get, class: "mb-3" do |form| %>
  <%= form.text_field :query,
                      class: "form-control",
                      placeholder: 'Search ingredient' %>
<% end %>
<div data-search-ingredients-target="list">
  <%  @not_have_ingredients.each do |ingredient| %>
    <div class="card-product" data-controller="ingredients-index" data-ingredients-index-id-value=<%= ingredient.id %> data-action="click->ingredients-index#select_ingredient" data-ingredients-index-target="ingredientCard">
      <%= render "ingredient_card", ingredient: ingredient %>
    </div>
  <% end %>
</div>
